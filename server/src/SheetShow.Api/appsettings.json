{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "SheetShow",
    "Audience": "SheetShowClient",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 90
  },
  "RateLimiting": {
    "AuthWindowSeconds": 60,
    "AuthMaxRequests": 10,
    "UploadWindowSeconds": 60,
    "UploadMaxRequests": 30,
    "DefaultWindowSeconds": 60,
    "DefaultMaxRequests": 300
  }
}
